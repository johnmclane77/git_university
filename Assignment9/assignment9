import random

# define a new class that is based on turtle

def menu(selection):
  if selection == "n":
    newName = raw_input("Please name your new turtle: ")
    parent.makeNewTurtle(newName)
  elif selection == "h":
    parent.halfTurtles()
    repaint(earth)
  elif selection == "r":
    parent.allTurnRight()
    parent.turnRight()
  elif selection == "l":
    parent.allTurnLeft()
    parent.turnLeft()
  elif selection == "m":
    parent.moveForward()
    parent.forward()
  elif selection == "s":
    newName = raw_input("Please name your new SLOW turtle: ")
    parent.makeSlowTurtle(newName)
  elif selection == "g":
    parent.greetChildren()
  elif selection == "a":
    newName = raw_input("Please name your new SLOW turtle: ")
    parent.makeAdventurousTurtle(newName)
  elif selection == "x":
    parent.adventure()

class ParentTurtle(Turtle):

  def __init__ (self, home):
    Turtle.__init__(self,home)  
    self.children = []
    self.home = home
    self.setName("Mum")
    
  def makeNewTurtle(self,name):
    newborn = Turtle(self.home)
    newborn.setName(name)
    self.children.append(newborn)
    return newborn
    
  def makeSlowTurtle(self,name):
    newborn = slowTurtle(self.home)
    newborn.setName(name)
    self.children.append(newborn)
    return newborn            

  def makeAdventurousTurtle(self,name):
    newborn = adventurousTurtle(self.home)
    newborn.setName(name)
    self.children.append(newborn)
    return newborn  

  def halfTurtles(self):
    i = 0
    for child in self.children:
      i = i + 1
    i = i / 2
    for child in range(0,i):
       kill = self.children[child]
       kill.setVisible(false)
       self.children.pop(child)
      
      
  def allTurnRight(self):
    for child in self.children:
      child.turnRight()
     
  def allTurnLeft(self):
    for child in self.children:
      child.turnLeft()
      
  def moveForward(self):
    for child in self.children:
      child.forward()
  
  def adventure(self):
    for child in self.children:
      if str(child.__class__) == "adventurousTurtle":
        child.roam(self)
        
         
class slowTurtle(Turtle):
  def forward(self):
    Turtle.forward(self,50)  

class adventurousTurtle(Turtle):
  def roam(self,num):
    for i in range (0 ,4):
      Turtle.turnRight(self)
      Turtle.forward(self,int(100*random.random()))
      
earth = makeWorld()
parent = ParentTurtle(earth)
parent.setVisible(false)
parent.penUp()

while True:
  selection = raw_input("Please enter selection: ").lower()
  if selection == "q":
    break
  menu(selection)
  
quit